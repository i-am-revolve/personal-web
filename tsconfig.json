{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*", "components/*/index"],
      "@libs/*":       ["libs/*", "libs/*/index"],
      "@pages/*":      ["pages/*", "pages/*/index"],
      "@public/*":     ["public/*", "public/*/index"],
      "@styles/*":     ["styles/*", "styles/*/index"],
      "*":             ["*", "node_modules/*", "node_modules/*/index"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
